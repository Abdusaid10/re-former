 <%= form_for(@user, as: :user, url: users_path, authenticity_token: form_authenticity_token)do |user|%>
  <%= user.label(:username, 'Username') %>
  <%= user.text_field(:username)%>
  <%= user.label(:email, 'Email address' ) %>
   <%= user.text_field(:email)%>
  <%= user.label(:password, 'Password' ) %>
   <%= user.password_field(:password)%>
  <%= user.submit( 'Submit' ) %>
<% end %>  